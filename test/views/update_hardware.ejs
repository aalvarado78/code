<!--inluder header-->
<%-include('include/_header')%>
<!--include Header-->

<!--Main Site-->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i>All Hardware</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Hardware</h2>
      <span class="text-light">Use the form to update an Hardware</span>
    </div>

    <!--add user form--->
    <!--form handling-->
    <form
      method="POST"
      id="update_hardware"
      action="/api/hardware/<%=hardware._id%>"
    >
      <div class="new_hardware">
        <div class="form-group">
          <label for="hardwareName" class="text-light">Hardware Name</label>
          <input type="hidden" name="id" value="" />
          <input
            type="text"
            name="hardwareName"
            value="<%=hardware.hardwareName%>"
            placeholder="4112"
          />
        </div>
        <div class="form-group">
          <label for="vendor" class="text-light">vendor</label>
          <input
            type="text"
            name="vendor"
            value="<%=hardware.vendor%>"
            placeholder="ford"
          />
        </div>
        <div class="form-group">
          <label for="location" class="text-light">Location</label>
          <input
            type="text"
            name="location"
            value="<%=hardware.location%>"
            placeholder="ford"
          />
        </div>
        <div class="form-group">
          <label for="performance" class="text-light">Performance</label>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="performance" value="good" />
            <label for="radio-2" class="radio-label">Good</label>
          </div>
          <div class="radio inline">
            <input
              type="radio"
              id="radio-3"
              name="performance"
              value="needs working"
            />
            <label for="radio-3" class="radio-label">Needs working</label>
          </div>
        </div>
        <div class="form-group">
          <label for="performance" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="status" value="Active" />
            <label for="radio-4" class="radio-label">Active</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="status" value="Inactive" />
            <label for="radio-5" class="radio-label">Inactive</label>
          </div>
        </div>

        <div class="form-group">
          <label for="performance" class="text-light">Date</label>
          <input
            type="date"
            id="date"
            name="date"
            value="<%=new Date(hardware.date).toISOString().slice(0, 10)%>"
          />
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!--Main Site-->

<!--inluder header-->
<%-include('include/_footer')%>
<!--include Header-->
